<style>
  .hero-banner-slider-{{ section.id }} {
    width: 100%;
    height: 547px;
    overflow: hidden;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    position: relative;
  }

  {% for block in section.blocks %}
  .hero-banner-slider-{{ section.id }} .hero-slide-{{ forloop.index }} {
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: left;
    background-image:url('{{ block.settings.banner_image | image_url: width: 2000 }}')
  }
{% endfor %}
  .hero-banner-slider-{{ section.id }} .hero-content {
    text-align: left;
    position: absolute;
    left: 35px;
 
  }

  .hero-banner-slider-{{ section.id }} .hero-content h2 {
    font-size: 32px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    margin-bottom: 15px;
    color: white;
  }

  .hero-banner-slider-{{ section.id }} .hero-content p {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 15px;
    color: white;
  }

  {% for block in section.blocks %}
    .hero-slide-{{ forloop.index }} .hero-btn {
      display: inline-block;
      padding: 12px 24px;
      background: {{ block.settings.button_color }};
      color: {{ block.settings.button_text }};
      font-weight: 600;
      border-radius: 50px;
      text-decoration: none;
      transition: 0.3s ease;
    }

    .hero-slide-{{ forloop.index }} .hero-btn:hover {
      opacity: 0.85;
    }
  {% endfor %}

  @media screen and (max-width: 768px) {
    .hero-banner-slider-{{ section.id }} .hero-content {
      top:50px;
      left: 35px;
    }

    .hero-banner-slider-{{ section.id }} .hero-content h2 {
      font-size: 26px;
      font-weight:700;
  
    }

    .hero-banner-slider-{{ section.id }} .hero-content p {
      font-size: 24px;
       font-weight:400;

    }

 {% for block in section.blocks %}
      .hero-slide-{{ forloop.index }} {
        background-image: url('{{ block.settings.banner_image_mobile | image_url:width:500 }}');
        background-size: cover;
        background-position: center;
      }
    {% endfor %}
}

.hero-banner-slider-{{ section.id }} .swiper-pagination-bullet {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background: blue;
  opacity: 0.5;
}

.hero-banner-slider-{{ section.id }} .swiper-pagination-bullet-active {
  opacity: 1;
}
</style>


<section class="hero-banner-slider hero-banner-slider-{{ section.id }}">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide hero-slide hero-slide-{{ forloop.index }}" >
        <div class="hero-content">
          {% if block.settings.banner_heading != blank %}
            <h2>{{ block.settings.banner_heading }}</h2>
          {% endif %}
          {% if block.settings.banner_text != blank %}
            <p>{{ block.settings.banner_text }}</p>
          {% endif %}
          {% if block.settings.cta_text != blank %}
            <a href="{{ block.settings.cta_link }}" class="hero-btn hero-btn-{{ forloop.index }}">
              {{ block.settings.cta_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".hero-banner-slider-{{ section.id }}", {
      loop: true,
      autoplay: { delay: 4000 },
      pagination: { 
        el: ".hero-banner-slider-{{ section.id }} .swiper-pagination", 
        clickable: true 
      }
    });
  });
</script>

{% schema %}
{
  "name": "Hero Banner Slider",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom Margin",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner Image"
        },
        {
      "type": "image_picker",
      "id": "banner_image_mobile",
      "label": "Mobile Banner Image"
    }, 

        {
          "type": "text",
          "id": "banner_heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "banner_text",
          "label": "Sub Text"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Background Color",
          "default":"#800080"
        },
        {
          "type": "color",
          "id": "button_text",
          "label": "Button Text Color",
          "default":"#FFFFFF"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

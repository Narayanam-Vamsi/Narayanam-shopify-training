<section id="shopify-section-{{ section.id }}" class="progress-tracker-section">
  <div class="swiper progress-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign status_class = block.settings.step_status | downcase | replace: ' ', '-' %}
        <div class="swiper-slide progress-step" {{ block.shopify_attributes }}>
          {% if block.settings.step_image != blank %}
            {{ block.settings.step_image | image_url: width: 400 | image_tag: alt: block.settings.step_title }}
          {% endif %}
          <h4 class="step-title">{{ block.settings.step_title }}</h4>
          <p class="step-desc">{{ block.settings.step_description }}</p>
          <p class="status {{ status_class }}">
            Status: {{ block.settings.step_status }}
          </p>
        </div>
      {% endfor %}
    </div>


    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

 
  <div class="swiper-pagination pagination-below"></div>
</section>

<style>

.progress-tracker-section {
  width: 100%;
  margin: 10px auto;
  position: relative;
}


.progress-step {
  border-radius: 10px;
  background: rgba(134, 134, 139, 0.06);
  padding: 10px;
  text-align: left;
}


.progress-step img {
  width: 100%;
  border-radius: 10px;
  margin-bottom: 10px;
}


.progress-step .step-title {
  font-family: 'Lato', sans-serif;
  font-size: 14px;
  font-weight: 400;
  margin-bottom: 10px;
}


.progress-step .step-desc {
  font-family: 'Inter', sans-serif;
  font-size: 14px;
  font-weight: 400;
  margin-bottom: 10px;
  color: #86868B;
}


.progress-step .status {
  font-family: 'Lato', sans-serif;
  font-size: 14px;
  font-weight: 400;
}


.progress-step .status.completed { color: #369F2D; }     
.progress-step .status.in-progress { color: #8A38F5; }    
.progress-step .status.pending { color: #86868B; }        


.swiper-button-prev,
.swiper-button-next {
  color: #000;
}


.progress-tracker-section .pagination-below {
  text-align: center;
  margin-top: 20px; 
}

.progress-tracker-section .swiper-pagination-bullet {
  background: #000; 
  opacity: 0.5;
  width: 10px;
  height: 10px;
  margin: 0 4px;
}

.progress-tracker-section .swiper-pagination-bullet-active {
  opacity: 1;
  background: #000;
}
</style>

{% schema %}
{
  "name": "Progress_Tracker",
  "settings": [],
  "blocks": [
    {
      "type": "progress_step",
      "name": "Progress Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "step_image",
          "label": "Step Image"
        },
        {
          "type": "richtext",
          "id": "step_title",
          "label": "Step Title"
        },
        {
          "type": "textarea",
          "id": "step_description",
          "label": "Step Description",
          "default": "Your ring design is finalized and approved for production"
        },
        {
          "type": "select",
          "id": "step_status",
          "label": "Step Status",
          "default": "Pending",
          "options": [
            { "value": "Completed", "label": "Completed" },
            { "value": "In Progress", "label": "In Progress" },
            { "value": "Pending", "label": "Pending" }
          ]
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Progress_Tracker",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<script>
document.addEventListener("DOMContentLoaded", function () {
  new Swiper(".progress-swiper", {
    slidesPerView: 1.5,
    spaceBetween: 16,
    pagination: {
      el: ".pagination-below", 
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      768: { slidesPerView: 1.5 },
      1024: { slidesPerView: 3 },
      1280: { slidesPerView: 4.5 }
    }
  });
});
</script>

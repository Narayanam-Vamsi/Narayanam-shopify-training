<section class="bestsellers-section bestsellers-{{ section.id }}" style="margin-bottom:{{ section.settings.margin_bottom }}px">
  <div class="bestsellers-container">

    <div class="bestsellers-left">
      {% if section.settings.heading != blank %}
        <h2 class="bestsellers-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="bestsellers-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      {% if section.settings.shop_all_url != blank %}
        <a href="{{ section.settings.shop_all_url }}" class="shop-all-btn">
          {{ section.settings.shop_all_text }}
        </a>
      {% endif %}
    </div>

    <div class="bestsellers-right">
      {% assign collection = collections[section.settings.collection] %}
      {% if collection != blank and collection.products_count > 0 %}
        <div class="swiper bestsellers-swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for product in collection.products %}
              <div class="swiper-slide product-card">
                <a href="{{ product.url }}">
                  {% if product.featured_image %}
                    {{ product.featured_image | image_url: width: 400 | image_tag: alt: product.title }}
                  {% endif %}
                </a>
                <div class="product-info">
                  {% if product.type != blank %}
                    <p class="prod-type">{{ product.type }}</p>
                  {% endif %}
                  <h3 class="prod-title">{{ product.title | strip_html | split: ' ' | slice: 0, 1 | join: ' ' }}</h3>
                  <p class="price">{{ product.price | money }}</p>
                  <button class="add-to-bag">
                    ADD TO BAG <span class="bag-price">- {{ product.price | money_without_trailing_zeros }}</span>
                  </button>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-controls">
       
          <div class="swiper-pagination bestsellers-pagination-{{ section.id }}"></div>
          <div class="nav-buttons">
          <div class="swiper-button-prev bestsellers-prev-{{ section.id }}">{% render 'testimonial-nav-left' %}</div>
          <div class="swiper-button-next bestsellers-next-{{ section.id }}">{% render 'testimonial-nav-right' %}</div>
          </div>
          </div>
        </div>
      {% endif %}
    </div>

  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.bestsellers-swiper-{{ section.id }}', {
    slidesPerView: 1.2,
    spaceBetween: 10,
    navigation: {
      nextEl: '.bestsellers-next-{{ section.id }}',
      prevEl: '.bestsellers-prev-{{ section.id }}'
    },
    pagination: {
      el: '.bestsellers-pagination-{{ section.id }}',
      type: 'progressbar'
    },
    breakpoints: {
      320: { slidesPerView: 1.2, spaceBetween: 10 },
      768: { slidesPerView: 2.5, spaceBetween: 10 },
      1024: { slidesPerView: 3, spaceBetween: 20 }
    }
  });
});
</script>

{% schema %}
{
  "name": "Best Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Love Your Skin With Our Bestsellers"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A skincare line crafted to perfection for 50 years"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "text",
      "id": "shop_all_text",
      "label": "Shop All Button Text",
      "default": "SHOP ALL"
    },
    {
      "type": "url",
      "id": "shop_all_url",
      "label": "Shop All Button Link",
      "default": "/collections/all"
    },
    {
      "type":"range",
      "id": "margin_bottom",
      "min": 10,
      "max":50,
      "unit": "px",
      "label": "Set bottom margin",
      "step": 10,
      "default":30
    }
  ],
  "presets": [
    {
      "name": "Best Products",
      "category": "Products"
    }
  ]
}
{% endschema %} 

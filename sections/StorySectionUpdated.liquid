<style>

.know-our-story-{{ section.id }}{
  background: #FFF9F6;
}

.know-our-story-{{ section.id }} .main-content {
display:flex;
gap:30px;
padding:20px;
justify-content:center;
align-items:center;

}

.know-our-story-{{ section.id }} img {
  object-fit: cover;
}

.know-our-story-{{section.id}} know-our-story-image{
  width:50%;

}

.know-our-story-{{ section.id }} .know-our-story-content{

  width:50%;
}

.know-our-story-{{ section.id }} .quality-icon img {
  width: 40px;
  height: 40px;
  object-fit: contain;
}

.know-our-story-{{ section.id }} .know-our-story-content h2 {
  font-size: 32px;
  font-weight: 400;
  font-family: 'Montserrat', sans-serif;
  margin-bottom: 30px;
  color: #333;
}

.know-our-story-{{ section.id }} .know-our-story-content p {
  font-size: 18px;
  font-weight:400;
  margin-bottom: 30px;
  font-family: 'Quicksand', sans-serif;
}

.know-our-story-{{ section.id }} .know-our-story-content .btn {
  display: inline-flex;
  align-items:center;
  gap:10px;
  padding: 10px 20px;
  background: #e86f42;
  color: #fff;
  border-radius: 20px;
  text-decoration: none;
  font-weight: 500;
  font-family: 'Quicksand', sans-serif;
  transition: 0.3s;
}

.know-our-story-{{ section.id }} .know-our-story-content .btn:hover {
  background: #cc5d36;
}

.know-our-story-{{ section.id }} .know-our-story-swiper {
  margin-top: 30px;
}

.know-our-story-{{ section.id }} .swiper-slide {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  text-align:center;

}


.know-our-story-{{ section.id }} .swiper-slide p {
  font-size: 14px;
  font-weight:400;
  font-family: 'Quicksand', sans-serif;
}

.know-our-story-{{ section.id }} .swiper-slide h4 {
  font-size: 18px;
  font-weight:400;
  margin-bottom: 10px;
  font-family: 'Quicksand', sans-serif;
}

.know-our-story-{{ section.id }} .swiper-button-prev,
.know-our-story-{{ section.id }} .swiper-button-next {
  color: #e86f42;
}

.know-our-story-{{ section.id }} .policy-icons {

  width:80%;
  display: flex;
  justify-content: space-between; 
  align-items: center;
  gap: 20px; 
  margin:0 auto;
  padding-bottom:50px;
    padding-top:50px;
}

.know-our-story-{{ section.id }} .policy-icons img {
  width: 160px;
  height: 50px;
  object-fit: contain;
}


@media screen and (max-width:768px){


  .know-our-story-{{ section.id }} .main-content {
display:flex;
gap:20px;
flex-direction:column;
justify-content:center;
align-items:center;

}

.know-our-story-{{ section.id }} .know-our-story-content{

  width:100%;
  text-align:center;
}

.know-our-story-{{ section.id }} .policy-icons {

  gap: 10px; 
  margin:0 auto;
  padding-bottom:30px;
  padding-top:30px;
  
}

.know-our-story-{{ section.id }} .policy-icons img {
  width: 140px;
  height: 50px;
  object-fit: contain;
}


}

@media screen and (max-width:500px){

.know-our-story-{{ section.id }} .policy-icons {

  gap: 10px; 
  margin:0 auto;
    padding-bottom:30px;
    padding-top:30px;
  
}

.know-our-story-{{ section.id }} .policy-icons img {
  width: 120px;
  height: 40px;
  object-fit: contain;
}

}



@media screen and (max-width:400px){

.know-our-story-{{ section.id }} .policy-icons {

  gap: 10px; 
  
}

.know-our-story-{{ section.id }} .policy-icons img {
  width: 90px;
  height: 30px;
  object-fit: contain;
}

}
</style>

<section class="know-our-story-{{ section.id }}">

  <div class="main-content">
  <div class="know-our-story-image">
    {% if section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy' }}
    {% endif %}
  </div>
  <div class="know-our-story-content">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.description != blank %}
      <p>{{ section.settings.description }}</p>
    {% endif %}
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="btn">
        {{ section.settings.button_label }} <span>{% render 'white-nav' %}</span>
      </a>
    {% endif %}

    <div class="know-our-story-swiper swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {% if block.settings.icon != blank %}
              <div class="quality-icon">
              {{ block.settings.icon | image_url: width: 40 | image_tag }}
              </div>
            {% endif %}
            {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
            {% endif %}
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <div class="swiper-button-prev">{% render 'testimonial-nav-left' %}</div>
      <div class="swiper-button-next">{% render 'testimonial-nav-right' %}</div>
      <div class="swiper-pagination"></div>
    </div>
    </div>
  </div>
  <div class="policy-icons">

  {% if section.settings.icon1 != blank %}
   {{  section.settings.icon1 | image_url: width: 150 | image_tag }}
  {% endif %}

    {% if section.settings.icon2 != blank %}
   {{  section.settings.icon2 | image_url: width: 150 | image_tag }}
  {% endif %}
  

    {% if section.settings.icon3 != blank %}
   {{  section.settings.icon3 | image_url: width: 150 | image_tag }}
  {% endif %}
  

  </div>
</section>



<script>
document.addEventListener("DOMContentLoaded", function () {
  new Swiper(".know-our-story-{{ section.id }} .know-our-story-swiper", {
    slidesPerView: 1.5,
    spaceBetween: 20,
    navigation: {
      nextEl: ".know-our-story-{{ section.id }} .swiper-button-next",
      prevEl: ".know-our-story-{{ section.id }} .swiper-button-prev",
      enabled: true 
    },
    pagination: {
      el: ".know-our-story-{{ section.id }} .swiper-pagination",
      clickable: true,
      enabled: false
    },
    breakpoints: {
      0: {
        slidesPerView: 1,
        navigation: { enabled: false }, 
        pagination: { enabled: true }  
      },
      768: {
        slidesPerView: 1.5,
        navigation: { enabled: false },
        pagination: { enabled: true }
      },
      1024: {
        slidesPerView: 2,
        navigation: { enabled: true }, 
        pagination: { enabled: false }  
      }
    }
  });
});
</script>


{% schema %}
{
  "name": "Know Our Story",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Know Our Story"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Amanté is an international intimate wear brand..."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Image"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Read More"
    },
    {
      "type": "image_picker",
      "id": "icon1",
      "label": "Icon 1"
    },
    {
      "type": "image_picker",
      "id": "icon2",
      "label": "Icon 2"
    },
    {
      "type": "image_picker",
      "id": "icon3",
      "label": "Icon 3"
    }
  ],
  "blocks": [
    {
      "type": "icon_block",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quality"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Amanté products are made of premium fabrics..."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Know Our Story",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

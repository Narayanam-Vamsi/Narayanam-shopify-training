<div class="header-navigation">
  <!-- Logo -->
  {% if section.settings.image_logo != blank %}
    <div class="header__heading-logo-wrapper">
      {{ section.settings.image_logo | image_url: width: 200 | image_tag: class: 'header__heading-logo', alt: shop.name }}
    </div>
  {% endif %}

  <!-- Navigation -->
  <nav class="header__nav">
    <ul>
      {% for link in linklists[section.settings.menu].links %}
        <li class="has-submenu">
          <a href="{{ link.url }}">{{ link.title }}</a>

          <!-- Simple / Multi-Level Submenu -->
          {% if link.links != blank %}
            <ul class="submenu">
              {% for sublink in link.links %}
                <li class="has-submenu">
                  <a href="{{ sublink.url }}">{{ sublink.title }}</a>

                  {% if sublink.links != blank %}
                    <ul class="submenu">
                      {% for sub2 in sublink.links %}
                        <li><a href="{{ sub2.url }}">{{ sub2.title }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}

          <!-- Megamenu (optional, with metafields) -->
          {% if link.metafields.megamenu_image != blank %}
            <div class="megamenu">
              {% for sublink in link.links %}
                <div class="megamenu-column">
                  {% if sublink.metafields.sub_image != blank %}
                    {{ sublink.metafields.sub_image | image_url: width: 100 | image_tag: alt: sublink.title }}
                  {% endif %}
                  <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>

  <!-- Right Icons -->
  <div class="header__icons">
    <a href="/search" class="icon">ğŸ”</a>
    <a href="/account" class="icon">ğŸ‘¤</a>
    <a href="/cart" class="icon">ğŸ›’</a>
  </div>
</div>

<style>
.header-navigation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 20px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

/* Logo */
.header__heading-logo-wrapper { max-width: 120px; flex-shrink: 0; }
.header__heading-logo { max-width: 100%; height: auto; }

/* Menu */
.header__nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex; 
  justify-content: center;
  gap: 25px;
  position: relative;
}
.header__nav ul li { position: relative; }
.header__nav ul li a {
  text-decoration: none;
  color: #333;
  font-weight: 500;
  padding: 10px;
  transition: color 0.3s ease;
}
.header__nav ul li a:hover { color: #007bff; }

/* Submenu */
.submenu {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background: #fff;
  border: 1px solid #eee;
  padding: 10px;
  min-width: 180px;
  z-index: 999;
}
.has-submenu:hover > .submenu { display: block; }
.submenu li { position: relative; }
.submenu li .submenu { left: 100%; top: 0; }

/* Megamenu */
.megamenu {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  width: 600px;
  background: #fff;
  border: 1px solid #eee;
  display: flex;
  gap: 15px;
  padding: 15px;
  z-index: 999;
}
.has-submenu:hover > .megamenu { display: flex; }
.megamenu-column img { width: 100%; max-width: 100px; }
.megamenu-column span { display: block; text-align: center; margin-top: 5px; }

/* Right Icons */
.header__icons { display: flex; gap: 15px; }
.header__icons .icon {
  font-size: 18px;
  text-decoration: none;
  color: #333;
}
.header__icons .icon:hover { color: #007bff; }
</style>

{% schema %}
{
  "name": "header_navigation",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_logo",
      "label": "Logo Image"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "presets": [
    { "name": "header_navigation" }
  ]
}
{% endschema %}
